@page
@model IndexModel
@{
    ViewData["Title"] = "Coding Challenge Platform";
}

<div class="text-center mb-5">
    <h1 class="display-4">Coding Challenge Platform</h1>
    <p class="lead">Test your skills, solve problems, and track your progress</p>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Available Challenges</h5>
                <p class="card-text">Explore our collection of coding problems across different difficulty levels.</p>
                <a href="#" class="btn btn-primary">View Challenges</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Leaderboard</h5>
                <p class="card-text">See how you rank against other developers in solving challenges.</p>
                <a href="#" class="btn btn-primary">View Leaderboard</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">My Submissions</h5>
                <p class="card-text">Track your previous submissions and progress over time.</p>
                <a href="#" class="btn btn-primary">My Submissions</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Featured Challenge</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">Array Sum Pairs</h5>
                <h6 class="card-subtitle mb-2 text-muted">Difficulty: Medium</h6>
                <p class="card-text">Find all pairs of integers in an array that sum to a specific target value.</p>
                <a href="#" class="btn btn-primary">Try This Challenge</a>
            </div>
        </div>
    </div>
</div>
